{

  "manifest_version": 3,
  "name": "ArchiveClick",
  "version": "0.0.5",

  "description": "icon click replaces current tab (default; optional)",

  "icons": {
    "48": "assets/archive48.png",
    "96": "assets/archive96.png"
  },
  
  "action": {
    "default_icon": {
      "16": "assets/archive16.png",
      "24": "assets/archive24.png",
      "32": "assets/archive32.png"
    },
    "default_title": "ArchiveClick"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "background": {
      "scripts": [
          "main.js"
      ]
  },

  "permissions": [
      "activeTab",
      "contextMenus",
      "storage"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "{a4632b0e-9b84-4e4b-b9e0-4841306d36ac}",
      "strict_min_version": "109.0"
    }
  }
}
